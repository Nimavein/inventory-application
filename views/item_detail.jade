extends layout

block content
  h1 Title: #{item.name}

  p #[strong Brand:]
    a(href=item.brand.url) #{item.brand.name}
  p #[strong Description:] #{item.description}
  p #[strong In Stock:] #{item.number_in_stock}
  p #[strong Price:] $#{item.price}
  p #[strong Category:]
    a(href=item.category.url) #{item.category.name}

  hr
  p
    a(href=item.url+'/delete') Delete item